@{
    ViewData["Title"] = "Excel İçe Aktar";
}

@section ActionButtons {
    <div class="d-flex gap-2">
        <a href="/Records" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Kayıtlara Dön
        </a>
        <a href="/Records/Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i>Manuel Kayıt Ekle
        </a>
        <a href="/FixedImports" class="btn btn-outline-info">
            <i class="fas fa-database me-1"></i>Sabit İçe Aktarım
        </a>
    </div>
}

<!-- Bildirimler -->
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>İşlem Hatası</h5>
        <p class="mb-0">@err</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="fas fa-check-circle me-2"></i>İşlem Başarılı</h5>
        <p class="mb-0">@ok</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Ana Yükleme Kartı -->
        <div class="card shadow mb-4">
            <div class="card-header bg-success text-white py-4">
                <div class="text-center">
                    <i class="fas fa-file-excel fa-3x mb-3"></i>
                    <h3 class="m-0 fw-bold">Excel İçe Aktar</h3>
                    <p class="m-0 mt-2 opacity-75">Excel dosyalarınızdan toplu posta kaydı oluşturun</p>
                </div>
            </div>

            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-action="Import" id="uploadForm">
                    @Html.AntiForgeryToken()

                    <!-- Liste Tipi -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-tag me-2 text-primary"></i>Liste Tipi Seçin
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-check card border h-100">
                                        <input class="form-check-input" type="radio" name="listType" value="ucretsiz" id="ucretsiz" checked>
                                        <label class="form-check-label card-body" for="ucretsiz">
                                            <div class="text-center">
                                                <i class="fas fa-gift fa-2x text-primary mb-2"></i>
                                                <h6 class="card-title">Ücretsiz Liste</h6>
                                                <p class="card-text small text-muted">Devlet kurumlarına gönderilen ücretsiz posta kayıtları</p>
                                                <span class="badge bg-primary">Miktar: 0 ₺</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check card border h-100">
                                        <input class="form-check-input" type="radio" name="listType" value="parali" id="parali">
                                        <label class="form-check-label card-body" for="parali">
                                            <div class="text-center">
                                                <i class="fas fa-money-bill-wave fa-2x text-success mb-2"></i>
                                                <h6 class="card-title">Paralı Liste</h6>
                                                <p class="card-text small text-muted">Ödemeli posta kayıtları (Miktar alanı zorunlu)</p>
                                                <span class="badge bg-success">Miktar: &gt; 0 ₺</span>
                                            </div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Dosya Yükleme Alanı -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-upload me-2 text-primary"></i>Excel Dosyası Seçin
                            </h5>

                            <div id="uploadArea" class="file-upload-area border rounded p-5 text-center bg-light">
                                <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">Excel Dosyasını Buraya Sürükleyin veya Seçin</h5>
                                <p class="text-muted small mb-3">Desteklenen formatlar: .xlsx, .xls (Max: 10MB)</p>

                                <!-- ÖNEMLİ: input her zaman DOM'da kalır -->
                                <input type="file" name="excelFile" id="excelFile" class="visually-hidden" accept=".xlsx,.xls" required>

                                <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('excelFile').click()">
                                    <i class="fas fa-folder-open me-1"></i>Dosya Seç
                                </button>

                                <!-- Sadece burası göster/gizle yapılır -->
                                <div id="fileInfo" class="mt-3 d-none">
                                    <div class="alert alert-info d-flex align-items-center">
                                        <i class="fas fa-file-excel me-3 fa-lg text-success"></i>
                                        <div class="flex-grow-1">
                                            <strong id="fileName"></strong><br />
                                            <small id="fileSize" class="text-muted"></small>
                                        </div>
                                        <button type="button" class="btn-close" onclick="clearFile()"></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Gelişmiş Seçenekler -->
                    <div class="accordion mb-4" id="advancedOptions">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#advancedCollapse">
                                    <i class="fas fa-cogs me-2"></i>Gelişmiş Seçenekler
                                </button>
                            </h2>
                            <div id="advancedCollapse" class="accordion-collapse collapse" data-bs-parent="#advancedOptions">
                                <div class="accordion-body">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label">Barkod Üretim Stratejisi</label>
                                            <select class="form-select" name="barcodeStrategy">
                                                <option value="auto" selected>Otomatik Üret</option>
                                                <option value="keep">Mevcut Barkodları Koru</option>
                                                <option value="skip">Barkod Üretme</option>
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Çakışan Kayıtlar</label>
                                            <select class="form-select" name="conflictResolution">
                                                <option value="skip" selected>Atla (Mevcutları Koru)</option>
                                                <option value="overwrite">Üzerine Yaz</option>
                                                <option value="duplicate">Çift Kayıt Oluştur</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- İşlem Butonları -->
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a href="/Records" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>İptal
                        </a>
                        <div class="d-flex gap-2">
                            <button type="reset" class="btn btn-outline-warning">
                                <i class="fas fa-eraser me-1"></i>Temizle
                            </button>
                            <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                <i class="fas fa-file-import me-1"></i>Excel'i İçe Aktar
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Excel Formatı Bilgileri -->
        <div class="card shadow">
            <div class="card-header bg-info text-white py-3">
                <h5 class="m-0 fw-bold"><i class="fas fa-info-circle me-2"></i>Excel Formatı ve Kurallar</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="fas fa-table me-2 text-success"></i>Gerekli Sütunlar</h6>
                        <ul class="list-unstyled small">
                            <li><code>MuhabereNo</code> - Zorunlu, benzersiz</li>
                            <li><code>GittigiYer</code> - Zorunlu</li>
                            <li><code>Adres</code> - İsteğe bağlı</li>
                            <li><code>Durum</code> - İsteğe bağlı</li>
                            <li><code>Miktar</code> - Paralı listede zorunlu (sayı)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-download me-2 text-primary"></i>Şablon Dosyaları</h6>
                        <div class="d-grid gap-2">
                            <a href="/fixed-files/PostaListesiParaliDegil.xlsx" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-download me-1"></i>Ücretsiz Şablon İndir
                            </a>
                            <a href="/fixed-files/PostaListesiParali.xlsx" class="btn btn-outline-success btn-sm">
                                <i class="fas fa-download me-1"></i>Paralı Şablon İndir
                            </a>
                        </div>
                        <h6 class="mt-3"><i class="fas fa-lightbulb me-2 text-info"></i>İpuçları</h6>
                        <ul class="list-unstyled small">
                            <li>• İlk satır başlık olmalı</li>
                            <li>• Tarih formatı: <code>GG.AA.YYYY</code></li>
                            <li>• Maksimum 1000 kayıt/işlem</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const uploadArea = document.getElementById('uploadArea');
            const fileInput  = document.getElementById('excelFile');
            const fileInfo   = document.getElementById('fileInfo');
            const fileNameEl = document.getElementById('fileName');
            const fileSizeEl = document.getElementById('fileSize');
            const form       = document.getElementById('uploadForm');
            const submitBtn  = document.getElementById('submitBtn');

            // Dosya seçildiğinde sadece bilgi alanını güncelle
            fileInput.addEventListener('change', () => {
                if (!fileInput.files || fileInput.files.length === 0) {
                    fileInfo.classList.add('d-none');
                    uploadArea.classList.remove('border-success','bg-success-light');
                    return;
                }
                const f = fileInput.files[0];
                const mb = (f.size / (1024 * 1024)).toFixed(2);
                fileNameEl.textContent = f.name;
                fileSizeEl.textContent = `Boyut: ${mb} MB`;
                fileInfo.classList.remove('d-none');
                uploadArea.classList.add('border-success','bg-success-light');
            });

            // Basit sürükle-bırak (input DOM’da kalır)
            ;['dragover','dragenter'].forEach(ev =>
                uploadArea.addEventListener(ev, e => { e.preventDefault(); uploadArea.classList.add('bg-light','border-primary'); })
            );
            ;['dragleave','drop'].forEach(ev =>
                uploadArea.addEventListener(ev, e => { e.preventDefault(); uploadArea.classList.remove('border-primary'); })
            );
            uploadArea.addEventListener('drop', e => {
                if (e.dataTransfer.files.length > 0) {
                    fileInput.files = e.dataTransfer.files;
                    fileInput.dispatchEvent(new Event('change'));
                }
            });

            // Form doğrulama
            form.addEventListener('submit', e => {
                if (!fileInput.files || fileInput.files.length === 0) {
                    e.preventDefault();
                    alert('Lütfen bir Excel dosyası seçin!');
                    return false;
                }
                const maxSize = 10 * 1024 * 1024; // 10MB
                if (fileInput.files[0].size > maxSize) {
                    e.preventDefault();
                    alert('Dosya boyutu 10MB\'ı aşamaz!');
                    return false;
                }
                if (submitBtn) {
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>İşleniyor...';
                    submitBtn.disabled = true;
                }
                return true;
            });
        });

        // Sıfırla
        function clearFile() {
            const fileInput  = document.getElementById('excelFile');
            const fileInfo   = document.getElementById('fileInfo');
            const uploadArea = document.getElementById('uploadArea');
            if (fileInput) fileInput.value = '';
            if (fileInfo)  fileInfo.classList.add('d-none');
            if (uploadArea) uploadArea.classList.remove('border-success','bg-success-light');
        }
    </script>
}

