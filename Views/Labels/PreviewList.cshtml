@model string

@{
    ViewData["Title"] = "Teslim Listesi Önizleme";

    // Model: Base64 PDF
    var base64Pdf = Model;
    var recordCount = ViewBag.RecordCount as int? ?? 0;
    var titleText = ViewBag.TitleText as string ?? "TESLİM LİSTESİ ÖNİZLEME";
}

<div class="container mt-4">
    <h3 class="mb-3">
        📋 @titleText
        <small class="text-muted">
            (@recordCount kayıt)
        </small>
    </h3>

    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Bu ekran <strong>önizleme</strong> içindir.
        <br />
        Aynı düzen, <em>“Teslim Listesi Oluştur”</em> butonuna bastığınızda oluşturulan PDF çıktısı ile bire bir aynıdır.
        Tarayıcı araç çubuğundan yazdırabilir, büyütebilir veya PDF olarak kaydedebilirsiniz.
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (!string.IsNullOrWhiteSpace(base64Pdf))
            {
                <div style="width: 100%; height: 900px;">
                    <embed src="data:application/pdf;base64,@base64Pdf"
                           type="application/pdf"
                           width="100%"
                           height="100%" />
                </div>
            }
            else
            {
                <div class="p-4">
                    <div class="alert alert-warning mb-0">
                        Önizleme için PDF verisi bulunamadı.
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" asp-controller="Labels" class="btn btn-secondary">
            ← Etiket &amp; Liste Oluştur ekranına dön
        </a>
    </div>
</div>
