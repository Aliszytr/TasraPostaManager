@model TasraPostaManager.Models.LabelSettings


@* Gelişmiş Etiket Ayarları Partial View - Profesyonel Görünüm *@

<div class="row g-3">
    <div class="col-md-4">
        <label asp-for="PaperSize" class="form-label fw-bold text-dark">Kağıt Boyutu</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="fas fa-scroll"></i></span>
            <select asp-for="PaperSize" class="form-select"
                    asp-items="Html.GetEnumSelectList<TasraPostaManager.Models.PaperSizeType>()">
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <label asp-for="Orientation" class="form-label fw-bold text-dark">Yönlendirme</label>
        <div class="input-group">
            <span class="input-group-text bg-light"><i class="fas fa-retweet"></i></span>
            <select asp-for="Orientation" class="form-select"
                    asp-items="Html.GetEnumSelectList<TasraPostaManager.Models.PaperOrientation>()">
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <label asp-for="Template" class="form-label fw-bold text-dark">Hazır Şablon</label>
        <select asp-for="Template"
                class="form-select border-primary"
                id="labelTemplateSelect"
                data-current-template="@Model.Template"
                asp-items="Html.GetEnumSelectList<TasraPostaManager.Models.LabelTemplateType>()">
        </select>
        <div class="d-flex justify-content-between mt-1">
            <small class="text-muted" style="font-size: 0.75rem;">Özel ayar için 'Custom' seçiniz.</small>
            <span id="selectedTemplateBadge" class="badge bg-secondary">@Model.Template</span>
        </div>
    </div>
</div>

<hr class="my-4 text-muted" />

<div class="accordion mb-4 shadow-sm" id="advancedLabelSettingsAccordion">
    <div class="accordion-item border-0">
        <h2 class="accordion-header" id="advancedLabelSettingsHeading">
            <button class="accordion-button collapsed fw-bold text-primary bg-light" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#advancedLabelSettingsBody"
                    aria-expanded="false"
                    aria-controls="advancedLabelSettingsBody">
                <i class="fas fa-ruler-combined me-2"></i>
                Gelişmiş Milimetrik Ayarlar (Kenar Boşlukları & Grid)
            </button>
        </h2>
        <div id="advancedLabelSettingsBody"
             class="accordion-collapse collapse"
             aria-labelledby="advancedLabelSettingsHeading"
             data-bs-parent="#advancedLabelSettingsAccordion">
            <div class="accordion-body bg-white border-top">

                <h6 class="text-uppercase small fw-bold text-muted mb-3 border-bottom pb-2">
                    <i class="fas fa-arrows-alt me-1"></i> Sayfa Kenar Boşlukları
                </h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-3 col-6">
                        <label asp-for="TopMarginMm" class="form-label small fw-bold">Üst</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="TopMarginMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="BottomMarginMm" class="form-label small fw-bold">Alt</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="BottomMarginMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="LeftMarginMm" class="form-label small fw-bold">Sol</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="LeftMarginMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="RightMarginMm" class="form-label small fw-bold">Sağ</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="RightMarginMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                </div>

                <h6 class="text-uppercase small fw-bold text-muted mb-3 border-bottom pb-2">
                    <i class="fas fa-expand me-1"></i> Tek Etiket Boyutu
                </h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="LabelWidthMm" class="form-label small fw-bold">Genişlik</label>
                        <div class="input-group">
                            <input asp-for="LabelWidthMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LabelHeightMm" class="form-label small fw-bold">Yükseklik</label>
                        <div class="input-group">
                            <input asp-for="LabelHeightMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                </div>

                <h6 class="text-uppercase small fw-bold text-muted mb-3 border-bottom pb-2">
                    <i class="fas fa-th me-1"></i> Grid ve Ara Boşluklar
                </h6>
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <label asp-for="Columns" class="form-label small fw-bold">Sütun Adedi</label>
                        <input asp-for="Columns" class="form-control" type="number" min="1" max="50" />
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="Rows" class="form-label small fw-bold">Satır Adedi</label>
                        <input asp-for="Rows" class="form-control" type="number" min="1" max="100" />
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="HorizontalGapMm" class="form-label small fw-bold">Yatay Ara</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="HorizontalGapMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                    <div class="col-md-3 col-6">
                        <label asp-for="VerticalGapMm" class="form-label small fw-bold">Dikey Ara</label>
                        <div class="input-group input-group-sm">
                            <input asp-for="VerticalGapMm" class="form-control" type="number" step="0.1" />
                            <span class="input-group-text">mm</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom-0 pt-3">
        <h6 class="text-success fw-bold mb-0">
            <i class="fas fa-sliders-h me-2"></i>Kalite ve Görünüm Ayarları
        </h6>
    </div>
    <div class="card-body pt-0">
        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <label asp-for="FontSize" class="form-label fw-bold small">Yazı Boyutu (pt)</label>
                <input asp-for="FontSize" class="form-control" type="number" min="4" max="72" />
            </div>

            <div class="col-md-6 col-lg-3">
                <label class="form-label fw-bold small d-block">Etiket Çerçevesi</label>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="DrawLabelBorders" role="switch" id="drawBordersSwitch">
                    <label class="form-check-label small" for="drawBordersSwitch">Sınır Çiz</label>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <label asp-for="BarcodeEmphasis" class="form-label fw-bold small">Barkod Kalitesi</label>
                <select asp-for="BarcodeEmphasis" class="form-select form-select-sm">
                    <option value="1">1 - Standart</option>
                    <option value="2">2 - Yüksek</option>
                    <option value="3">3 - Çok Yüksek</option>
                    <option value="4">4 - Maksimum</option>
                </select>
            </div>

            <div class="col-md-6 col-lg-3">
                <label asp-for="BarcodeSize" class="form-label fw-bold small">Barkod Boyutu</label>
                <select asp-for="BarcodeSize" class="form-select form-select-sm">
                    <option value="small">Küçük</option>
                    <option value="medium">Orta</option>
                    <option value="large">Büyük</option>
                </select>
            </div>
        </div>
    </div>
</div>

@* ETİKET BİLGİLERİ KARTI *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom-0 pt-3">
        <h6 class="text-dark fw-bold mb-0">
            <i class="fas fa-tag me-2"></i>Etiket Üzerindeki Bilgiler
        </h6>
    </div>
    <div class="card-body pt-0">
        <div class="d-flex flex-wrap gap-3 p-3 bg-light rounded border">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowGonderenBilgisi">
                <label class="form-check-label small fw-semibold" asp-for="ShowGonderenBilgisi">Gönderen</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowGittigiYer">
                <label class="form-check-label small fw-semibold" asp-for="ShowGittigiYer">Alıcı</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowMuhabereNo">
                <label class="form-check-label small fw-semibold" asp-for="ShowMuhabereNo">Muhabere No</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowMuhabereBox">
                <label class="form-check-label small fw-semibold text-primary" asp-for="ShowMuhabereBox">Muh. Kutu İçinde</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowMiktar">
                <label class="form-check-label small fw-semibold" asp-for="ShowMiktar">Tutar</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowBarkodNo">
                <label class="form-check-label small fw-semibold" asp-for="ShowBarkodNo">Barkod (Text)</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="ShowTarih">
                <label class="form-check-label small fw-semibold" asp-for="ShowTarih">Tarih</label>
            </div>
        </div>
    </div>
</div>

@* LİSTE (MANİFESTO) AYARLARI KARTI - YENİ *@
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-bottom-0 pt-3">
        <h6 class="text-dark fw-bold mb-0">
            <i class="fas fa-list-ol me-2"></i>Teslim Listesi (PDF) Görünüm Ayarları
        </h6>
    </div>
    <div class="card-body pt-0">
        <div class="row g-3">
            <div class="col-12">
                <div class="d-flex flex-wrap gap-3 p-3 bg-light rounded border">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowRowNumber">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowRowNumber">Satır No</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowMuhabere">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowMuhabere">Muhabere</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowReceiver">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowReceiver">Alıcı</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowAmount">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowAmount">Tutar</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowDate">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowDate">Tarih</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowSignature">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowSignature">İmza Kutusu</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="ListShowBarcode">
                        <label class="form-check-label small fw-semibold" asp-for="ListShowBarcode">Barkod Sütunu</label>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <label asp-for="ListFontSize" class="form-label small fw-bold">Liste Yazı Puntosu</label>
                <input asp-for="ListFontSize" class="form-control form-control-sm" type="number" min="6" max="14" />
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-end">
    <span class="badge bg-light text-secondary border" id="labelSettingsSummary">
        @Model.PaperSize / @Model.Orientation / @Model.Template
    </span>
</div>