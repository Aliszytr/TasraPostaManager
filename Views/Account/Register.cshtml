@model RegisterViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-xl-5">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-bottom-0 pt-4 pb-0">
                    <h5 class="mb-1"><i class="fas fa-user-plus me-2 text-primary"></i>Yeni Kullanıcı Oluştur</h5>
                    <p class="text-muted small">Sisteme yeni bir kullanıcı ekleyin</p>
                </div>
                <div class="card-body">
                    <form asp-action="Register" asp-controller="Account" method="post">

                        <div asp-validation-summary="All" class="alert alert-danger" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="Username" class="form-control" placeholder="örn: ahmet.yilmaz" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="örn: ahmet@posta.gov.tr" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="En az 6 karakter" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifreyi tekrar girin" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="User">Kullanıcı</option>
                                <option value="Admin">Yönetici (Admin)</option>
                            </select>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-user-plus me-2"></i>Kullanıcı Oluştur
                            </button>
                            <a href="/Account/Users" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Geri
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
