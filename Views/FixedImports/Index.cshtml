@using TasraPostaManager.Models
@{
    ViewData["Title"] = "Sabit Dosya İçe Aktarım";
}

@section ActionButtons {
    <div class="d-flex gap-2">
        <a href="/Uploads" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Excel İçe Aktar'a Dön
        </a>
        <a href="/Records" class="btn btn-outline-primary">
            <i class="fas fa-list me-1"></i>Kayıtları Görüntüle
        </a>
    </div>
}

<!-- Bildirimler -->
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>İşlem Hatası</h5>
        <p class="mb-0">@err</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Message"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="fas fa-check-circle me-2"></i>İşlem Başarılı</h5>
        <p class="mb-0">@msg</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ImportSummary"] is string summary && !string.IsNullOrWhiteSpace(summary))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="fas fa-file-import me-2"></i>Import Özeti</h5>
        <p class="mb-0">@Html.Raw(summary)</p>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Sistem Bilgileri -->
    <div class="col-lg-4 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-info text-white py-3">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-server me-2"></i>Sistem Bilgileri
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-folder me-2 text-primary"></i>
                            <strong>Klasör</strong>
                        </span>
                        <code class="bg-light px-2 py-1 rounded">@ViewBag.Root</code>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-gift me-2 text-success"></i>
                            <strong>Ücretsiz Dosya</strong>
                        </span>
                        <span class="badge @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "bg-danger" : "bg-success")">
                            @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "Bulunamadı" : "Mevcut")
                        </span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>
                            <i class="fas fa-money-bill-wave me-2 text-warning"></i>
                            <strong>Paralı Dosya</strong>
                        </span>
                        <span class="badge @(string.IsNullOrEmpty(ViewBag.Parali) ? "bg-danger" : "bg-success")">
                            @(string.IsNullOrEmpty(ViewBag.Parali) ? "Bulunamadı" : "Mevcut")
                        </span>
                    </div>
                </div>

                <!-- Dosya Detayları -->
                <div class="mt-4">
                    <h6 class="border-bottom pb-2">
                        <i class="fas fa-info-circle me-2"></i>Dosya Detayları
                    </h6>
                    @if (!string.IsNullOrEmpty(ViewBag.ParaliDegil))
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Ücretsiz:</small>
                            <small><code>@ViewBag.ParaliDegil</code></small>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.Parali))
                    {
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Paralı:</small>
                            <small><code>@ViewBag.Parali</code></small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- İçe Aktarma İşlemleri -->
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-database me-2"></i>Sabit Dosya İçe Aktarım
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    Sabit dosyalardan otomatik veri içe aktarma işlemi.
                    Docker volume üzerinden beslenen dosyaları kullanır.
                </p>

                <div class="row">
                    <!-- Ücretsiz Dosya İçe Aktar -->
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100 @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "border-danger" : "border-success")">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-gift fa-3x @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "text-danger" : "text-success")"></i>
                                </div>
                                <h5 class="card-title">Ücretsiz Liste</h5>
                                <p class="card-text small text-muted">
                                    Devlet kurumlarına gönderilen ücretsiz posta kayıtları
                                </p>

                                @if (ViewBag.FreeFileExists == true)
                                {
                                    <div class="alert alert-success mb-2">
                                        <i class="fas fa-check-circle me-1"></i> Dosya mevcut
                                    </div>

                                    <form asp-action="Import" method="post" class="mt-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="which" value="paralidegil" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-download me-1"></i>İçe Aktar
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-warning mb-2">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Dosya bulunamadı
                                    </div>
                                    <button type="button" class="btn btn-outline-secondary" disabled>
                                        <i class="fas fa-download me-1"></i>İçe Aktar
                                    </button>
                                }

                            </div>
                        </div>
                    </div>

                    <!-- Paralı Dosya İçe Aktar -->
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100 @(string.IsNullOrEmpty(ViewBag.Parali) ? "border-danger" : "border-success")">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-money-bill-wave fa-3x @(string.IsNullOrEmpty(ViewBag.Parali) ? "text-danger" : "text-warning")"></i>
                                </div>
                                <h5 class="card-title">Paralı Liste</h5>
                                <p class="card-text small text-muted">
                                    Ödemeli posta kayıtları (Miktar alanı zorunlu)
                                </p>

                                @if (ViewBag.PaidFileExists == true)
                                {
                                    <div class="alert alert-success mb-2">
                                        <i class="fas fa-check-circle me-1"></i> Dosya mevcut
                                    </div>

                                    <form asp-action="Import" method="post" class="mt-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="which" value="parali" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-download me-1"></i>İçe Aktar
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="alert alert-warning mb-2">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Dosya bulunamadı
                                    </div>
                                    <button type="button" class="btn btn-outline-secondary" disabled>
                                        <i class="fas fa-download me-1"></i>İçe Aktar
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>

                <!-- Toplu İşlem -->
                <div class="card mt-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Toplu İşlem</strong>
                            <div class="text-muted small">Her iki dosyayı da sırayla içe aktar</div>
                        </div>
                        <form asp-action="ImportAll" method="post" class="mb-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-play me-1"></i>Hepsini İçe Aktar
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>

        <!-- Docker ve Teknik Bilgiler -->
        <div class="card shadow mt-4">
            <div class="card-header bg-dark text-white py-3">
                <h5 class="m-0 font-weight-bold">
                    <i class="fas fa-cogs me-2"></i>Teknik Konfigürasyon
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="fas fa-docker me-2 text-info"></i>Docker Volume</h6>
                        <div class="bg-light p-3 rounded">
                            <code>./fixed-files:/app/fixed-files</code>
                        </div>
                        <small class="text-muted mt-2 d-block">
                            Bu volume üzerinden dışarıdan dosya beslemesi yapılır.
                        </small>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-folder-tree me-2 text-success"></i>Dosya Yapısı</h6>
                        <div class="bg-light p-3 rounded small">
                            <div class="mb-1">
                                <i class="fas fa-folder me-1 text-warning"></i>
                                fixed-files/
                            </div>
                            <div class="ms-3">
                                <div class="mb-1">
                                    <i class="fas fa-file-excel me-1 text-success"></i>
                                    PostaListesiParaliDegil.xlsx
                                </div>
                                <div>
                                    <i class="fas fa-file-excel me-1 text-success"></i>
                                    PostaListesiParali.xlsx
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hızlı Komutlar -->
                <div class="mt-4">
                    <h6><i class="fas fa-terminal me-2 text-secondary"></i>Hızlı Komutlar</h6>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <div class="bg-dark text-light p-2 rounded small">
                                <code># Dosya kontrolü</code><br>
                                <code>ls -la ./fixed-files/</code>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-dark text-light p-2 rounded small">
                                <code># Volume oluşturma</code><br>
                                <code>docker volume create fixed-files</code>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- İstatistikler -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-light py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-bar me-2"></i>Sistem Durumu
                </h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-hdd fa-2x text-primary mb-2"></i>
                            <h5 class="text-primary mb-1">@ViewBag.Root</h5>
                            <small class="text-muted">Klasör Konumu</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-file-excel fa-2x @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "text-danger" : "text-success") mb-2"></i>
                            <h5 class="@(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "text-danger" : "text-success") mb-1">
                                @(string.IsNullOrEmpty(ViewBag.ParaliDegil) ? "Yok" : "Mevcut")
                            </h5>
                            <small class="text-muted">Ücretsiz Dosya</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-file-excel fa-2x @(string.IsNullOrEmpty(ViewBag.Parali) ? "text-danger" : "text-success") mb-2"></i>
                            <h5 class="@(string.IsNullOrEmpty(ViewBag.Parali) ? "text-danger" : "text-success") mb-1">
                                @(string.IsNullOrEmpty(ViewBag.Parali) ? "Yok" : "Mevcut")
                            </h5>
                            <small class="text-muted">Paralı Dosya</small>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="border rounded p-3">
                            <i class="fas fa-database fa-2x text-info mb-2"></i>
                            <h5 class="text-info mb-1">Auto</h5>
                            <small class="text-muted">İşlem Modu</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // İçe aktarma butonları için loading state
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form[action="/FixedImports/Import"]');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const button = form.querySelector('button[type="submit"]');
                    const originalText = button.innerHTML;

                    button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>İşleniyor...';
                    button.disabled = true;

                    // 30 saniye sonra butonu resetle (timeout koruması)
                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 30000);
                });
            });

            // Toplu işlem butonu
            const importAllForm = document.querySelector('form[action="/FixedImports/ImportAll"]');
            if (importAllForm) {
                importAllForm.addEventListener('submit', function(e) {
                    const button = importAllForm.querySelector('button[type="submit"]');
                    const originalText = button.innerHTML;

                    button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Tüm Dosyalar İşleniyor...';
                    button.disabled = true;

                    setTimeout(() => {
                        button.innerHTML = originalText;
                        button.disabled = false;
                    }, 45000);
                });
            }
        });

        // Sayfa yüklendiğinde dosya durumunu kontrol et
        function checkFileStatus() {
            const ucretsizBadge = document.querySelector('.list-group-item:nth-child(2) .badge');
            const paraliBadge = document.querySelector('.list-group-item:nth-child(3) .badge');

            if (ucretsizBadge.textContent.includes('Bulunamadı')) {
                ucretsizBadge.classList.remove('bg-success');
                ucretsizBadge.classList.add('bg-danger');
            }

            if (paraliBadge.textContent.includes('Bulunamadı')) {
                paraliBadge.classList.remove('bg-success');
                paraliBadge.classList.add('bg-danger');
            }
        }

        document.addEventListener('DOMContentLoaded', checkFileStatus);
    </script>
}